<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.personal.comunitarias">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"

        android:theme="@style/AppTheme">

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity android:name=".Intro">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="noticias.Noticias"
            android:configChanges="screenSize|orientation"
            android:label="@string/title_activity_noticias"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity

            android:name=".Menu"
            android:theme="@style/AppTheme.NoActionBar"/>

        <activity
            android:name=".YoutubeActivitty"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="Videos"
            android:theme="@style/AppTheme.NoActionBar">

        </activity>
        <activity
            android:name=".TwitterActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="Tweets"
            android:theme="@style/AppTheme.NoActionBar">

        </activity>

        <activity
            android:name=".OficinasActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="Oficinas"
            android:theme="@style/AppTheme.NoActionBar">

        </activity>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
    </application>




</manifest>