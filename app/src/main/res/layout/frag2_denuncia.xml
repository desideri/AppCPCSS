<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="70dp"
        android:layout_height="wrap_content">

        <TextView
            android:text="Ubicación"
            android:layout_width="wrap_content"
            android:textColor="#000000"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:textSize="16sp" />


        <Spinner
            android:gravity="left"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:id="@+id/spinner"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/lbl_descripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            app:counterEnabled="true"
            app:counterMaxLength="100">

            <EditText
                android:id="@+id/txt_descripcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Describa su denuncia"
                android:inputType="textMultiLine"
                android:maxLength="100"
                />
        </android.support.design.widget.TextInputLayout>



        <TextView
            android:text="Desea comparecer ante CPCCS (*)"
            android:layout_width="130dp"
            android:layout_marginTop="130dp"
            android:textColor="#000000"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:textSize="16sp" />


        <Spinner
            android:gravity="left"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:id="@+id/spinner_comparecer"
            android:layout_alignTop="@+id/textView2"
            android:layout_alignParentEnd="true" />

        <TextView
            android:text="Sabe usted si estos hechos ya están siendo investigados o si el pedido ya fue solicitado (*)"
            android:layout_width="150dp"
            android:layout_marginTop="230dp"
            android:textColor="#000000"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:textSize="16sp" />



        <Spinner
            android:gravity="left"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:id="@+id/spinner_hechos"
            android:layout_alignTop="@+id/textView3"
            android:layout_alignParentEnd="true" />


        <Button
            android:text="Siguiente"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="370dp"
            android:textColor="#ffffff"
            android:background="@color/colorPrimaryDark"
            android:id="@+id/btnInfoPeticionario" />
    </RelativeLayout>


</ScrollView>

