<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        android:layout_height="800dp">

        <TextView
            android:text="Información Resumida"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="19sp"
            android:layout_centerHorizontal="true"
            android:id="@+id/textView17" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/lbl_Nombres"
            android:layout_marginTop="55dp"
            android:layout_width="match_parent"
            android:textColor="#000000"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/m_txt_Nombres"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nombres"
                android:textSize="16sp"
                android:textColor="#000000"
                android:inputType="textCapWords" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/lbl_Apellidos"
            android:layout_marginTop="115dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/m_txt_Apellidos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Apellidos"
                android:textSize="16sp"
                android:textColor="#000000"
                android:inputType="textCapWords"

                />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/lbl_Correo"
            android:layout_marginTop="175dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/txt_correo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Correo electrónico"
                android:textSize="16sp"
                android:inputType="textEmailAddress"
                android:textColor="#000000"
                />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/lbl_TipoIdentificacion"
            android:layout_width="match_parent"
            android:layout_marginTop="235dp"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/txt_tipoIdentificacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Identificación"
                android:inputType="number"
                android:textSize="16sp"
                android:textColor="#000000"
                />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/lbl_denuciado"
            android:layout_width="match_parent"
            android:layout_marginTop="295dp"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/txt_nombreDenunciado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nombres del Denunciado"
                android:inputType="textCapWords"
                android:textSize="16sp"
                android:textColor="#000000"
                />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/lbl_apel_denuciado"
            android:layout_width="match_parent"
            android:layout_marginTop="355dp"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/txt_ApellidosDenunciado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Apellidos del Denunciado"
                android:textSize="16sp"
                android:textColor="#000000"
                android:inputType="textCapWords"
                />
        </android.support.design.widget.TextInputLayout>

        <LinearLayout
            android:id="@+id/des"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/grey"
            android:orientation="horizontal"
            android:layout_below="@+id/lbl_apel_denuciado"
            android:layout_alignParentStart="true"
            android:layout_marginTop="50dp">


            <EditText
                android:id="@+id/txt_Descripcion_De"
                android:inputType="textMultiLine"
                android:layout_marginTop="10dp"
                android:lines="8"
                android:minLines="6"
                android:textColor="#000000"
                android:gravity="top|left"
                android:maxLines="10"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:scrollbars="vertical"
                />

        </LinearLayout>

        <TextView
            android:text="Descripción de la Denuncia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lbl_apel_denuciado"
            android:layout_alignParentStart="true"
            android:layout_marginTop="21dp"
            android:id="@+id/Descripción" />

        <Button
            android:text="Anterior"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/des"
            android:layout_marginTop="15dp"
            android:textColor="#ffffff"
            android:background="@color/colorPrimaryDark"
            android:id="@+id/anterior" />
        <Button
            android:text="Enviar"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/des"
            android:layout_marginTop="15dp"
            android:textColor="#ffffff"
            android:background="@color/colorPrimaryDark"
            android:id="@+id/enviar" />
    </RelativeLayout>
</ScrollView>
