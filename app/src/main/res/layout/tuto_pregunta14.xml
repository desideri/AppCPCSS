<?xml version="1.0" encoding="utf-8"?>

<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:background="@drawable/fondo2"
    android:layout_height="match_parent"
    >

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />


    </android.support.design.widget.AppBarLayout>

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <RelativeLayout
            android:orientation="vertical" android:layout_width="match_parent"
            android:layout_height="494dp">

            <TextView
                android:text="¿Cómo ver las publicaciones de"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"
                android:gravity="center"
                android:layout_marginTop="111dp"
                android:textStyle="normal|bold"
                android:textSize="24sp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />
            <TextView
                android:text="facebook de la página del CPCCS?"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView30"
                android:gravity="center"
                android:layout_marginTop="141dp"
                android:textStyle="normal|bold"
                android:textSize="24sp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:text="Paso 1: En el menú principal dar un toque en “Menú”, en el ícono que se muestra a continuación:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="65dp"
                android:id="@+id/textView3"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_below="@+id/textView2"
                android:textSize="17sp"
                android:layout_centerHorizontal="true"
                android:textAlignment="textStart" />

            <TextView
                android:text="Paso 2: Luego, aparecerá una lista y debe dar un toque en “Facebook”."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView4"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:textSize="17sp"
                android:textAlignment="textStart"
                android:layout_marginTop="340dp" />

            <TextView
                android:text="Se mostrará la página oficial de facebook del CPCCS con su información respectiva."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView5"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:textSize="17sp"
                android:textAlignment="textStart"
                android:layout_marginTop="460dp" />



            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                app:srcCompat="@drawable/ic_menu_peque"
                android:id="@+id/imageView3"
                android:layout_marginTop="280dp"
                android:layout_centerHorizontal="true" />

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                app:srcCompat="@drawable/facebook_logo"
                android:id="@+id/imageView30"
                android:layout_marginTop="400dp"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>
    </ScrollView>

</android.support.design.widget.CoordinatorLayout>