<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="70dp"
        android:layout_height="580dp">

        <TextView
            android:text="Institución"
            android:layout_width="wrap_content"
            android:textColor="#000000"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:textSize="16sp" />


        <Spinner
            android:gravity="left"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:id="@+id/spinner_inst_p"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/lbl_Nombres"
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:textColor="#000000"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/txt_Nombres_p"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nombres"
                android:maxLength="25"
                android:inputType="textCapWords"
                android:textSize="16sp"  />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/lbl_Apellidos"
            android:layout_marginTop="110dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/txt_Apellidos_p"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Apellidos"
                android:maxLength="25"
                android:textSize="16sp"
                android:inputType="textCapWords"

                />
        </android.support.design.widget.TextInputLayout>

        <TextView
            android:text="Género"
            android:layout_width="wrap_content"
            android:textColor="#000000"
            android:layout_height="wrap_content"
            android:layout_marginTop="190dp"
            android:id="@+id/textViewGenero"
            android:textSize="17sp" />


        <Spinner
            android:gravity="left"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:id="@+id/spinner_gen_p"
            android:layout_alignTop="@+id/textViewGenero"
            android:layout_alignParentEnd="true" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/lbl_Cargo"
            android:layout_width="match_parent"
            android:layout_marginTop="240dp"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/txt_cargo_p"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Cargo"
                android:maxLength="25"
                android:inputType="textCapWords"
                android:textSize="16sp"
                />
        </android.support.design.widget.TextInputLayout>


        <TextView
            android:text="Provincia"
            android:layout_width="wrap_content"
            android:layout_marginTop="330dp"
            android:textColor="#000000"
            android:layout_height="wrap_content"
            android:id="@+id/textView8"
            android:textSize="17sp" />

        <Spinner
            android:gravity="left"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:id="@+id/spinner_prov_p"
            android:layout_alignTop="@+id/textView8"
            android:layout_alignParentEnd="true" />

        <TextView
            android:text="Ciudad"
            android:layout_width="wrap_content"
            android:layout_marginTop="380dp"
            android:textColor="#000000"
            android:layout_height="wrap_content"
            android:id="@+id/textView9"
            android:textSize="17sp" />

        <Spinner
            android:gravity="left"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:id="@+id/spinner_ciu_p"
            android:layout_alignTop="@+id/textView9"
            android:layout_alignParentEnd="true" />

        <Button
            android:text="Siguiente"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="448dp"
            android:textColor="#ffffff"
            android:background="@color/colorPrimaryDark"
            android:id="@+id/btnSiguiente_entidad" />

        <Button
            android:text="Anterior"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="448dp"
            android:textColor="#ffffff"
            android:background="@color/colorPrimaryDark"
            android:id="@+id/btnAnterior_entidad" />

    </RelativeLayout>
</ScrollView>
