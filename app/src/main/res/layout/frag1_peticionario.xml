<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    
        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="70dp"
            android:layout_height="950dp">

            <TextView
                android:text="Identidad Reservada"
                android:layout_width="wrap_content"
                android:textColor="#000000"
                android:layout_height="wrap_content"
                android:id="@+id/textView"
                android:textSize="16sp" />


            <Spinner
                android:gravity="left"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:id="@+id/spinner"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/lbl_Nombres"
                android:layout_marginTop="50dp"
                android:layout_width="match_parent"
                android:textColor="#000000"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/txt_Nombres"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nombres"
                    android:maxLength="25"
                    android:inputType="textCapWords"
                    android:textSize="16sp"  />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/lbl_Apellidos"
                android:layout_marginTop="110dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/txt_Apellidos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Apellidos"
                    android:maxLength="25"
                    android:textSize="16sp"
                    android:inputType="textCapWords"

                    />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/lbl_Correo"
                android:layout_marginTop="170dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/txt_correo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Correo electrónico"
                    android:maxLength="25"
                    android:textSize="16sp"
                    android:inputType="textEmailAddress"

                    />
            </android.support.design.widget.TextInputLayout>

            <TextView
                android:text="Tipo de Identificación"
                android:layout_width="wrap_content"
                android:layout_marginTop="250dp"
                android:textColor="#000000"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"
                android:textSize="16sp" />


            <android.support.design.widget.TextInputLayout
                android:id="@+id/lbl_TipoIdentificacion"
                android:layout_width="match_parent"
                android:layout_marginTop="300dp"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/txt_tipoIdentificacion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Identificación"
                    android:inputType="number"
                    android:maxLength="11"
                    />
            </android.support.design.widget.TextInputLayout>

            <Spinner
                android:gravity="left"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:id="@+id/spinner2"
                android:layout_alignTop="@+id/textView2"
                android:layout_alignParentEnd="true" />

            <TextView
                android:text="Género"
                android:layout_width="wrap_content"
                android:textColor="#000000"
                android:layout_height="wrap_content"
                android:layout_marginTop="380dp"
                android:id="@+id/textView3"
                android:textSize="17sp" />


            <Spinner
                android:gravity="left"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:id="@+id/spinner3"
                android:layout_alignTop="@+id/textView3"
                android:layout_alignParentEnd="true" />

            <TextView
                android:text="Estado Civil"
                android:layout_width="wrap_content"
                android:textColor="#000000"
                android:layout_height="wrap_content"
                android:layout_marginTop="430dp"
                android:id="@+id/textView4"
                android:textSize="17sp" />

            <Spinner
                android:gravity="left"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:id="@+id/spinner4"
                android:layout_alignTop="@+id/textView4"
                android:layout_alignParentEnd="true" />

            <TextView
                android:text="Nivel de educación"
                android:layout_width="wrap_content"
                android:textColor="#000000"
                android:layout_height="wrap_content"
                android:layout_marginTop="480dp"
                android:id="@+id/textView5"
                android:textSize="17sp" />

            <Spinner
                android:gravity="left"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:id="@+id/spinner5"
                android:layout_alignTop="@+id/textView5"
                android:layout_alignParentEnd="true" />


        <android.support.design.widget.TextInputLayout
            android:id="@+id/lbl_TipoOcupacion"
            android:layout_width="match_parent"
            android:layout_marginTop="530dp"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/txt_ocupacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="25"
                android:inputType="textCapWords"
                android:hint="Ocupación"/>
        </android.support.design.widget.TextInputLayout>

            <TextView
                android:text="Nacionalidad"
                android:layout_width="wrap_content"
                android:layout_marginTop="610dp"
                android:textColor="#000000"
                android:layout_height="wrap_content"
                android:id="@+id/textView6"
                android:textSize="17sp" />

            <Spinner
                android:gravity="left"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:id="@+id/spinner6"
                android:layout_alignTop="@+id/textView6"
                android:layout_alignParentEnd="true" />
            <TextView
                android:text="Residencia"
                android:layout_width="wrap_content"
                android:layout_marginTop="660dp"
                android:textColor="#000000"
                android:layout_height="wrap_content"
                android:id="@+id/textView7"
                android:textSize="17sp" />

            <Spinner
                android:gravity="left"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:id="@+id/spinner7"
                android:layout_alignTop="@+id/textView7"
                android:layout_alignParentEnd="true" />

            <TextView
                android:text="Provincia"
                android:layout_width="wrap_content"
                android:layout_marginTop="710dp"
                android:textColor="#000000"
                android:layout_height="wrap_content"
                android:id="@+id/textView8"
                android:textSize="17sp" />

            <Spinner
                android:gravity="left"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:id="@+id/spinner8"
                android:layout_alignTop="@+id/textView8"
                android:layout_alignParentEnd="true" />

            <TextView
                android:text="Ciudad"
                android:layout_width="wrap_content"
                android:layout_marginTop="760dp"
                android:textColor="#000000"
                android:layout_height="wrap_content"
                android:id="@+id/textView9"
                android:textSize="17sp" />

            <Spinner
                android:gravity="left"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:id="@+id/spinner9"
                android:layout_alignTop="@+id/textView9"
                android:layout_alignParentEnd="true" />

            <Button
                android:text="Siguiente"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="820dp"
                android:textColor="#ffffff"
                android:background="@color/colorPrimaryDark"
                android:id="@+id/btnInfoPeticionario" />

        </RelativeLayout>
</ScrollView>
